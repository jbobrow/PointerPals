<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <AssemblyName>PointerPals</AssemblyName>
    <RootNamespace>PointerPals</RootNamespace>
    <Version>1.0.0</Version>
    <Company>Jon Bobrow</Company>
    <Product>PointerPals</Product>
    <Description>Share your cursor with friends in real-time</Description>
    <Copyright>Copyright 2026 Jon Bobrow</Copyright>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.1.0" />
    <PackageReference Include="System.Text.Json" Version="8.0.0" />
  </ItemGroup>

</Project>
