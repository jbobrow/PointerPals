<Window x:Class="PointerPals.Views.CursorOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CursorOverlay"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="False"
        IsHitTestVisible="False"
        ResizeMode="NoResize"
        Width="150"
        Height="80">

    <!-- Use Canvas for absolute positioning - cursor tip is always at (0,0) -->
    <Canvas>
        <!-- Cursor arrow at (0,0) - tip is at top-left of window -->
        <Path x:Name="CursorPath"
              Canvas.Left="0"
              Canvas.Top="0"
              Fill="Black"
              Stroke="White"
              StrokeThickness="1.5"
              Data="M 0,0 L 0,24 L 5.5,19.5 L 9,28 L 13,26.5 L 9.5,18 L 16,18 Z">
            <Path.RenderTransform>
                <ScaleTransform x:Name="CursorScaleTransform" ScaleX="1" ScaleY="1"/>
            </Path.RenderTransform>
        </Path>

        <!-- Username label positioned below cursor -->
        <Border x:Name="UsernameBorder"
                Canvas.Left="0"
                Canvas.Top="30"
                Background="#CC000000"
                CornerRadius="4"
                Padding="6,2"
                Visibility="Collapsed">
            <TextBlock x:Name="UsernameText"
                       Foreground="White"
                       FontSize="11"
                       FontWeight="Medium"/>
        </Border>
    </Canvas>
</Window>
