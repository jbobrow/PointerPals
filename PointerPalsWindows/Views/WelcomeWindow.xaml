<Window x:Class="PointerPals.Views.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to PointerPals"
        Height="480"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="True">

    <Grid>
        <!-- Step Navigation -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Content Pages -->
        <Grid Grid.Row="0" Margin="30">

            <!-- Step 1: Welcome -->
            <StackPanel x:Name="Step1Panel" Visibility="Visible" VerticalAlignment="Center">
                <TextBlock Text="Welcome to PointerPals!"
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Share your cursor with friends and collaborate in real-time."
                           FontSize="15"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Cursor animation placeholder -->
                <Border Background="#F0F0F0"
                        CornerRadius="8"
                        Height="120"
                        Margin="40,0">
                    <TextBlock Text="PointerPals"
                               FontSize="24"
                               FontWeight="Light"
                               Foreground="Gray"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>

            <!-- Step 2: Set Username -->
            <StackPanel x:Name="Step2Panel" Visibility="Collapsed" VerticalAlignment="Center">
                <TextBlock Text="What should we call you?"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Your username will be shown to your pals above your cursor."
                           FontSize="14"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Foreground="Gray"
                           Margin="0,0,0,30"/>

                <TextBox x:Name="UsernameTextBox"
                         FontSize="16"
                         Padding="12,10"
                         MaxLength="32"
                         Width="280"
                         HorizontalAlignment="Center"
                         TextChanged="UsernameTextBox_TextChanged"/>

                <TextBlock x:Name="UsernameHint"
                           Text="Enter a username (max 32 characters)"
                           FontSize="12"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Step 3: Your Pointer ID -->
            <StackPanel x:Name="Step3Panel" Visibility="Collapsed" VerticalAlignment="Center">
                <TextBlock Text="Your Pointer ID"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Share this ID with your pals so they can see your cursor!"
                           FontSize="14"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Foreground="Gray"
                           Margin="0,0,0,30"/>

                <Border Background="#F5F5F5"
                        CornerRadius="4"
                        Padding="16,12"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,16">
                    <TextBlock x:Name="PointerIdText"
                               FontSize="18"
                               FontFamily="Consolas"
                               HorizontalAlignment="Center"/>
                </Border>

                <Button x:Name="CopyIdButton"
                        Content="Copy to Clipboard"
                        Width="160"
                        Height="36"
                        HorizontalAlignment="Center"
                        Click="CopyId_Click"/>
            </StackPanel>

            <!-- Step 4: Launch on Startup -->
            <StackPanel x:Name="Step4Panel" Visibility="Collapsed" VerticalAlignment="Center">
                <TextBlock Text="One more thing..."
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Would you like PointerPals to start automatically when you log in?"
                           FontSize="14"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Foreground="Gray"
                           Margin="0,0,0,30"/>

                <CheckBox x:Name="LaunchOnStartupCheckBox"
                          Content="Launch PointerPals on Startup"
                          FontSize="14"
                          HorizontalAlignment="Center"
                          IsChecked="True"/>

                <TextBlock Text="You can always change this later in Settings."
                           FontSize="12"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>

        <!-- Navigation Buttons -->
        <Grid Grid.Row="1" Margin="30,0,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Step Indicators -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <Ellipse x:Name="Step1Dot" Width="8" Height="8" Fill="#007AFF" Margin="0,0,8,0"/>
                <Ellipse x:Name="Step2Dot" Width="8" Height="8" Fill="#CCCCCC" Margin="0,0,8,0"/>
                <Ellipse x:Name="Step3Dot" Width="8" Height="8" Fill="#CCCCCC" Margin="0,0,8,0"/>
                <Ellipse x:Name="Step4Dot" Width="8" Height="8" Fill="#CCCCCC"/>
            </StackPanel>

            <Button x:Name="BackButton"
                    Grid.Column="1"
                    Content="Back"
                    Width="80"
                    Height="36"
                    Margin="0,0,12,0"
                    Visibility="Collapsed"
                    Click="Back_Click"/>

            <Button x:Name="NextButton"
                    Grid.Column="2"
                    Content="Get Started"
                    Width="120"
                    Height="36"
                    Click="Next_Click"/>
        </Grid>
    </Grid>
</Window>
