<Window x:Class="PointerPals.Views.AddPalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add a Pal"
        Height="150"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Enter your pal's Pointer ID:"
                   FontSize="13"
                   Margin="0,0,0,8"/>

        <TextBox x:Name="PointerIdTextBox"
                 Grid.Row="1"
                 FontSize="13"
                 Padding="8,6"
                 Text=""
                 VerticalContentAlignment="Center">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Style.Resources>
                        <VisualBrush x:Key="PlaceholderBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                            <VisualBrush.Visual>
                                <TextBlock Text="user_8675309" Foreground="Gray" Padding="8,6"/>
                            </VisualBrush.Visual>
                        </VisualBrush>
                    </Style.Resources>
                    <Style.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter Property="Background" Value="{StaticResource PlaceholderBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Cancel"
                    Width="80"
                    Height="28"
                    Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button Content="Add"
                    Width="80"
                    Height="28"
                    IsDefault="True"
                    Click="Add_Click"/>
        </StackPanel>
    </Grid>
</Window>
