<Window x:Class="PointerPals.Views.ServerSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configure Custom Server"
        Height="200"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Server Address:"
                   FontSize="13"
                   Margin="0,0,0,8"/>

        <TextBox x:Name="ServerUrlTextBox"
                 Grid.Row="1"
                 FontSize="13"
                 Padding="8,6"
                 Margin="0,0,0,8"/>

        <Button Content="Reset to Default"
                Grid.Row="2"
                HorizontalAlignment="Left"
                Width="120"
                Height="28"
                Margin="0,0,0,8"
                Click="ResetToDefault_Click"/>

        <TextBlock Grid.Row="3"
                   Text="Requires app restart to take effect"
                   FontSize="11"
                   Foreground="Gray"/>

        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Width="80"
                    Height="28"
                    Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button Content="Save"
                    Width="80"
                    Height="28"
                    IsDefault="True"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
